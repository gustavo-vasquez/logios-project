@model Logios.Models.FavoriteExercisesPanelViewModel
<h3 class="topic-area-statistics-title">Ejercicios Favoritos</h3>
<div class="table-responsive">
    <table class="table table-hover table-bordered text-center">
        <thead class="head-align">
            <tr>
                <th>Ejercicio</th>
                <th>Descripción</th>
                <th>¿Resuelto?</th>
                <th>Quitar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var favorite in Model.FavoriteExercises)
            {
                <tr>
                    <td class="col-vcenter"><a href='@Url.Action("Show", "Exercise", new { id = @favorite.ExerciseId })'>Ejercicio Nº @favorite.ExerciseId</a></td>
                    <td class="col-vcenter">@favorite.Description</td>
                    <td class="col-vcenter">
                        @if (favorite.Resolved)
	                    {
		                     <span class="glyphicon glyphicon-ok text-success"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove text-danger"></span>
                        }
                    </td>
                    <td><button class="btn btn-danger btn-sm remove-favorite-button" data-exercise-id="@favorite.ExerciseId"><span class="glyphicon glyphicon-trash"></span></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Scripts.Render("~/Scripts/exerciseFavorites.js")