@model Logios.Models.TopicAreaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Áreas temáticas";
}
<h1>Búsqueda por áreas temáticas</h1>
<h4>Haz click en un área o tema para ver todos los ejercicios relacionados</h4>
@{ int colNumber = 0; }
@foreach (var topicArea in Model.TopicsByArea.Keys)
{
    if (colNumber % 2 == 0)
    {
       @Html.Raw("<div class=\"row\">");
    }
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title"><a href='@Url.Action("ExercisesByArea", "TopicArea", new { topicAreaDescription = @topicArea })'> @topicArea </a></h3>
            </div>
            <div class="list-group">
                @foreach (var topic in Model.TopicsByArea[topicArea])
                {
                    <a href='@Url.Action("Index","Topic", new { topicId = @topic.TopicId })' class="list-group-item">@topic.Description</a>
                }
            </div>
        </div>
    </div>
    if (colNumber % 2 == 1)
    {
       @Html.Raw("</div>");
    }
    { colNumber++; }
}
