<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Logios</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-shadow">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    @*@Html.ActionLink("Logios", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    <img id="logo" src='@Url.Content("/content/images/LOGO_V2.0.svg")' title="Logios - Sapere aude" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ejercicio 1", "Show", "Exercise", new { id = "1" }, null)</li>                    
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Panel de control", "ControlPanel", "Administrator")</li>
                        <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color: white;">        
        @RenderBody()

        <div class="clearfix"></div>
        <br />
        <footer class="row">
            <div class="col-lg-12">
                <hr />
                <p>&copy; @DateTime.Now.Year Logios - Sapere aude</p>
            </div>
            @*<div class="col-lg-5 pull-right sidebox sidebox-social">
                    <span class="col-lg-offset-4">Seguínos en:</span>
                    <a class="sm-rss" href="http://feeds.feedburner.com/Logios" rel="external" target="_blank" title="Subscribirse">RSS Feed</a>
                    <a class="sm-goo" href="https://plus.google.com/u/0/" rel="publisher" target="_blank" title="Perfil de Google+">Google+</a>
                    <a class="sm-twi" href="http://twitter.com" target="_blank" title="Perfil de Twitter">Twitter</a>
                    <a class="sm-fac" href="https://www.facebook.com/" target="_blank" title="Perfil de Facebook">Facebook</a>
                </div>*@
        </footer>
    </div>

    <div id='goTop'></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.gotop.min.js")
    <script>$('#goTop').goTop({ appear: 20 });</script>
    @RenderSection("scripts", required: false)
</body>
</html>
